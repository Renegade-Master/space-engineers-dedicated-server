// Do not shutdown on a failed command
@ShutdownOnFailedCommand 0

//No password as this is unattended
@NoPromptForPassword 1

// Set the game installation directory
force_install_dir "/usr/local/wineprefix/drive_c/Program Files/Steam/steamapps/common/SpaceEngineers"

login anonymous

// Install/Update the Space Engineers Dedicated Server
app_update 298740 -beta GAME_VERSION validate

quit
